{% extends 'masterChats' %}

{% block chats %}

<div class="container">
    <div class="form-group">
        <label for="message">Chat starts here!</label>
        <input type="text" id="message" name="message" class="form-control" method="post"/>

    </div>
        <ul id="messages" class="list-group">

    {% for chat in chats %}
        <li class="list-group-item">
            {{ chat.message }}
        </li>

{% endfor %}

        </ul>
</div>

 {% endblock %}
